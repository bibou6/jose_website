{% extends 'CoreBundle:Core:menu.html.twig' %}


{% block body %}

<div class="container mt-5">
	<h2>{{ 'mail.labels.form' | trans }}</h2>
	{{ form_start(form) }}
	<div class="row">
		<div class="col-lg-4 col-sm-6 col-xs-12">
			<div>{{ form_label(form.name) }} : {{ form_widget(form.name) }}</div>
			<div>{{ form_label(form.phone) }} : {{ form_widget(form.phone) }}</div>
			<div>{{ form_label(form.email) }} : {{ form_widget(form.email) }}</div>
			<div class="mt-2"><button type="submit" class="btn btn-primary w-100">{{ 'common.actions.submit' | trans }}</button></div>
		</div>
		
		<div class="col-lg-8 col-sm-6 col-xs-12">{{ form_label(form.body) }} : {{ form_widget(form.body) }}</div>
		
	</div>

	{{ form_end(form) }}
</div>
{% endblock %}