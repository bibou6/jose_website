{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "CoreBundle:Core:menu.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block custom_css %}
	{% if page is not null and page.mainImage is not null %}
		body{
			background-image: url("{{ vich_uploader_asset(page,'mainImageFile') }}"); 
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
		}
		.bg-shadowed{
			background-color: rgba(0,0,0,0.6);
			color: white;
		}
		
		
	{% endif %}
{% endblock %}

{% block body %}
<div class="content">
	<div class="row">
		{% if page is not null %}
		<div class="col-lg-7  col-md-12">
    		<div class="container">
    			<div class="row">
    				<div class="col-lg-7 col-md-12  bg-shadowed text-justify">
            			{{ page.mainText(app.request.getLocale())|raw }}
            		</div>
        		    {% if page.secondaryImage is not null %}
            		<div class="col-lg-5 col-md-12 bg-shadowed text-center">
            			<img src="{{ vich_uploader_asset(page,'secondaryImageFile') | imagine_filter('homepage_secondary') }}"  class="mw-100"/>
            		</div>
            		{% endif %}
        		</div>
        	</div>
		</div>
		{% endif %}
	</div>
	</div>
  
  
{% endblock %}